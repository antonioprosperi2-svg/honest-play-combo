<script>
let saldo = parseInt(localStorage.getItem('saldoHonestPlay')) || 0;
document.getElementById('s-top').innerText = saldo;
const premi = [{t: 'BADGE BRONZO', v: 500}, {t: 'BADGE ARGENTO', v: 1000}, {t: 'BADGE ORO', v: 5000}, {t: 'LEGEND', v: 10000}];
let tempoGioco = 0; let timerGioco = null;
const SOGLIA_AD = 90;
function avviaProcesso(url) {
    tempoGioco = 0; clearInterval(timerGioco);
    timerGioco = setInterval(() => { tempoGioco++; }, 1000);
    apriGioco(url);
}
function apriGioco(url) { document.getElementById('game-iframe').src = url; document.getElementById('game-container').style.display = 'block'; }
function chiudiGioco() {
    clearInterval(timerGioco);
    document.getElementById('game-container').style.display = 'none';
    document.getElementById('game-iframe').src = '';
}
function vai(id) {
    document.querySelectorAll('.page').forEach(p => p.style.display = 'none');
    document.getElementById(id).style.display = 'block';
    document.getElementById('ng').classList.toggle('nav-active', id === 'g');
    document.getElementById('np').classList.toggle('nav-active', id === 'p');
    if(id === 'p') render();
}
function caricaVideo() {
    saldo += 10; 
    localStorage.setItem('saldoHonestPlay', saldo);
    document.getElementById('s-top').innerText = saldo;
    alert("10 Punti Bonus accreditati!");
    if(document.getElementById('p').style.display === 'block') render();
}
function render() {
    let h = '';
    premi.forEach(p => {
        let proc = (saldo / p.v * 100); if(proc > 100) proc = 100;
        h += `<div class="card"><div style="font-size:10px; color:#39FF14;">${p.t}</div><div style="font-size:14px; font-weight:bold; color:white;">${p.v} PTS</div><div class="bar"><div class="fill" style="width:${proc}%"></div></div></div>`;
    });
    document.getElementById('list').innerHTML = h;
}
render();
</script>
